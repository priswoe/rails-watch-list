
<%= form_for [@list, @bookmark] do |f| %>
  <%= f.label :movie_id %>
  <%= f.select :movie_id, options_for_select(Movie.all.map {|m| [m.title, m.id]}, {selected: @bookmark.movie_id}), { include_blank: "Select a movie" }, id: "movie-select" %>
  <%= f.label :comment %>
  <%= f.text_area :comment %>
  <%= f.submit %>
<% end %>


<%= simple_form_for :search, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input :name, input_html: {value: ""} %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
